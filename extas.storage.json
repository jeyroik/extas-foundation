{
    "name": "extas/foundation",
    "drivers": [
        {
            "class": "\\extas\\components\\repositories\\drivers\\DriverFileJson",
            "options": {
                "host": "configs/",
                "db": "system"
            },
            "tables": [
                "plugins", "extensions"
            ]
        }
    ],
    "tables": {
        "plugins": {
            "item_class": "\\extas\\components\\plugins\\Plugin",
            "pk": "name",
            "aliases": ["plugins"],
            "code": {
                "drop-after": "\\extas\\components\\Plugins::reset();"
            }
        }, 
        "extensions": {
            "item_class": "\\extas\\components\\plugins\\Extension",
            "pk": "name",
            "aliases": ["extensions"]
        }
    },
    "plugins": [],
    "extensions": [],
    "envs": {
        "EXTAS__CONTAINER_PATH_STORAGE_LOCK": "System container lock absolute path. Default: resources/container.dist.json",
        "EXTAS__PLUGINS_REPOSITORY": "Plugins repository name. Default: 'plugins'",
        "EXTAS__EXTENSIONS_REPOSITORY": "Extensions repository name. Default: 'extensions'"
    }
}